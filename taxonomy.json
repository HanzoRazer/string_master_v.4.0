{
  "schema_version": "1.0",
  "description": "Shared vocabulary for all exercise packs. Single source of truth for style families and technique categories.",

  "style_families": [
    {
      "id": "blues",
      "label": "Blues",
      "description": "Blues vocabulary: turnarounds, licks, motives, and 12-bar idioms",
      "subsumes": ["turnaround", "licks", "motives", "srv_outro", "albertking_intro", "walking_blues"]
    },
    {
      "id": "jazz",
      "label": "Jazz",
      "description": "Jazz vocabulary: enclosures, bebop scales, approach patterns, modal playing, and chromatic lines",
      "subsumes": ["enclosure", "bebop_scale", "approach_pattern", "chromatic_chain", "passing_tone", "modal", "swing"]
    },
    {
      "id": "theory",
      "label": "Theory / Harmony",
      "description": "Harmonic devices: cycles, voicings, gravity systems, and form studies (rhythm changes)",
      "subsumes": [
        "cycles", "cycle_fifths", "cycle_fourths", "cycle_thirds", "tritone_sub",
        "voicings", "drop2", "shell_voicing", "guide_tone", "contrary_motion", "diminished_cycle",
        "gravity", "harmonic_minor_gravity", "melodic_minor_gravity", "phrygian_gravity", "dominant_resolution",
        "rhythm_changes", "got_rhythm", "bridge_pattern", "aaba_form"
      ]
    },
    {
      "id": "folk",
      "label": "Folk / Bluegrass",
      "description": "Flatpicking, fiddle tunes, G-run patterns, and traditional melodies",
      "subsumes": ["bluegrass", "fiddle_tune", "flatpicking", "g_run"]
    },
    {
      "id": "flamenco",
      "label": "Flamenco",
      "description": "Phrygian modes, compas, rasgueado, and palo-specific techniques",
      "subsumes": ["solea", "buleria", "tangos", "farruca", "granainas", "taranta", "alegrias", "fandango"]
    },
    {
      "id": "gospel",
      "label": "Gospel / Soul",
      "description": "Gospel turnarounds, soul progressions, and church harmony",
      "subsumes": ["gospel_turnaround", "soul_progression"]
    },
    {
      "id": "latin",
      "label": "Latin / Bossa",
      "description": "Samba, bossa nova, and Latin comping patterns",
      "subsumes": ["samba", "bossa_nova"]
    },
    {
      "id": "rock",
      "label": "Rock",
      "description": "Rock vocabulary: Hendrix, modal vamps, pentatonic riffs, and power chord idioms",
      "subsumes": ["hendrix", "dorian_rock", "pentatonic_rock", "power_chord"]
    }
  ],

  "technique_categories": [
    {
      "id": "melodic",
      "label": "Melodic / Linear",
      "description": "Line construction: chromatic approach, arpeggiation, scale patterns, and enclosures",
      "subsumes": [
        "chromatic_approach", "enclosure", "passing_tone", "chromatic_cell", "zone_crossing",
        "arpeggiation", "chord_tone_targeting", "arpeggio_shape", "sweep",
        "scale_patterns", "bebop_scale", "modal_scale", "pentatonic"
      ]
    },
    {
      "id": "harmonic",
      "label": "Harmonic / Voice Movement",
      "description": "Chord connection: guide tones, voice leading, resolution patterns, and cadences",
      "subsumes": [
        "guide_tones", "guide_tone_voicing", "guide_tone_pairs", "shell_voicings", "tritone_awareness",
        "voice_leading", "contrary_motion", "parallel_motion", "oblique_motion",
        "resolution", "tritone_resolution", "b9_targeting", "cadence", "dominant_function"
      ]
    },
    {
      "id": "rhythmic",
      "label": "Rhythmic / Time Feel",
      "description": "Time and groove: phrasing, syncopation, compas, clave, and metric patterns",
      "subsumes": [
        "rhythmic_phrasing", "triplet_chain", "syncopation", "metric_displacement", "swing_feel",
        "compas", "compas_12", "compas_4", "clave", "rasgueado"
      ]
    },
    {
      "id": "articulation",
      "label": "Articulation / Touch",
      "description": "Physical execution: legato, staccato, bends, vibrato, and ornaments",
      "subsumes": ["legato", "staccato", "bend", "vibrato", "ornament", "hammer_on", "pull_off", "slide"]
    },
    {
      "id": "transposition",
      "label": "Transposition / 12-Key",
      "description": "Practice methodology: systematic key movement and modulation",
      "subsumes": ["twelve_key", "modulation", "key_center_awareness", "root_awareness"]
    }
  ],

  "difficulty_levels": ["beginner", "intermediate", "advanced"],

  "key_sets": {
    "all_12": ["C", "Db", "D", "Eb", "E", "F", "Gb", "G", "Ab", "A", "Bb", "B"],
