{
  "schema_id": "dance_pack",
  "schema_version": "v1",

  "metadata": {
    "id": "swing_basic_v1",
    "display_name": "Swing (Basic)",
    "dance_family": "jazz_american",
    "version": "1.0.0",
    "author": "system",
    "license": "core",
    "engine_compatibility": ">=0.2.0",
    "tags": ["jazz", "swing", "walking", "classic"]
  },

  "groove": {
    "meter": "4/4",
    "cycle_bars": 4,
    "subdivision": "ternary",
    "tempo_range_bpm": [100, 180],
    "swing_ratio": 0.55,

    "accent_grid": {
      "strong_beats": [1, 3],
      "secondary_beats": [2, 4],
      "ghost_allowed": true,
      "offbeat_emphasis": 0.3
    },

    "clave": {
      "type": "none",
      "pattern": [],
      "direction": "forward"
    }
  },

  "harmony_constraints": {
    "harmonic_rhythm": {
      "max_changes_per_cycle": 8,
      "min_beats_between_changes": 1,
      "change_on_strong_beat": "allowed"
    },

    "dominant_behavior": {
      "allowed": true,
      "resolution_strength": "strong",
      "secondary_dominants": true
    },

    "tritone_usage": {
      "allowed": true,
      "weight": "moderate",
      "forbidden_on_beats": []
    },

    "chromatic_drift": {
      "allowed": true,
      "max_semitones": 3
    },

    "modal_constraints": {
      "parallel_minor_allowed": true,
      "modal_interchange_level": "common_tones"
    }
  },

  "performance_profile": {
    "velocity_range": {
      "min": 50,
      "max": 105,
      "ghost_max": 28,
      "accent_min": 80
    },

    "pickup_bias": {
      "probability": 0.5,
      "max_offset_beats": 0.33
    },

    "contour_preference": {
      "stepwise_weight": 0.55,
      "leap_weight": 0.45,
      "max_leap_interval": 7
    },

    "ornament_density": "moderate",
    "register_bias": "mid",

    "articulation": {
      "default_duration_ratio": 0.7,
      "staccato_probability": 0.2,
      "legato_probability": 0.15
    }
  },

  "practice_mapping": {
    "primary_focus": [
      "swing_feel",
      "secondary_dominants",
      "timing_accuracy"
    ],

    "evaluation_weights": {
      "timing_accuracy": 0.35,
      "harmonic_choice": 0.35,
      "dynamic_control": 0.15,
      "groove_feel": 0.15
    },

    "common_errors": [
      "rushed_tempo",
      "dragged_tempo",
      "late_resolution",
      "lost_pulse"
    ],

    "difficulty_rating": "easy",
    "prerequisite_forms": []
  },

  "extensions": {}
}
