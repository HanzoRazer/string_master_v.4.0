{
  "schema_id": "dance_pack",
  "schema_version": "v1",

  "metadata": {
    "id": "salsa_clave_locked_v1",
    "display_name": "Salsa (Clave-Locked)",
    "dance_family": "afro_cuban",
    "version": "1.0.0",
    "author": "system",
    "license": "core",
    "engine_compatibility": ">=0.2.0",
    "tags": ["salsa", "son", "montuno", "tumbao", "clave", "2_3"]
  },

  "groove": {
    "meter": "4/4",
    "cycle_bars": 2,
    "subdivision": "binary",
    "tempo_range_bpm": [140, 200],
    "swing_ratio": 0.0,

    "accent_grid": {
      "strong_beats": [2, 4],
      "secondary_beats": [1, 3],
      "ghost_allowed": true,
      "offbeat_emphasis": 0.8
    },

    "clave": {
      "type": "explicit",
      "pattern": [1, 0, 0, 1, 0, 0, 1, 0, 0, 0, 1, 0, 1, 0, 0, 0],
      "direction": "forward"
    }
  },

  "harmony_constraints": {
    "harmonic_rhythm": {
      "max_changes_per_cycle": 4,
      "min_beats_between_changes": 2,
      "change_on_strong_beat": "preferred"
    },

    "dominant_behavior": {
      "allowed": true,
      "resolution_strength": "strong",
      "secondary_dominants": true
    },

    "tritone_usage": {
      "allowed": true,
      "weight": "moderate",
      "forbidden_on_beats": []
    },

    "chromatic_drift": {
      "allowed": true,
      "max_semitones": 2
    },

    "modal_constraints": {
      "parallel_minor_allowed": true,
      "modal_interchange_level": "common_tones"
    }
  },

  "performance_profile": {
    "velocity_range": {
      "min": 50,
      "max": 115,
      "ghost_max": 30,
      "accent_min": 85
    },

    "pickup_bias": {
      "probability": 0.75,
      "max_offset_beats": 0.25
    },

    "contour_preference": {
      "stepwise_weight": 0.5,
      "leap_weight": 0.5,
      "max_leap_interval": 7
    },

    "ornament_density": "moderate",
    "register_bias": "mid",

    "articulation": {
      "default_duration_ratio": 0.7,
      "staccato_probability": 0.25,
      "legato_probability": 0.1
    }
  },

  "practice_mapping": {
    "primary_focus": [
      "clave_alignment",
      "syncopation",
      "harmonic_awareness"
    ],

    "evaluation_weights": {
      "timing_accuracy": 0.40,
      "harmonic_choice": 0.30,
      "dynamic_control": 0.15,
      "groove_feel": 0.15
    },

    "common_errors": [
      "wrong_clave_side",
      "late_resolution",
      "rushed_tempo",
      "missed_pickup"
    ],

    "difficulty_rating": "medium",
    "prerequisite_forms": []
  },

  "extensions": {
    "clave_type": "son_2_3",
    "patterns": {
      "comp": "salsa_clave_2_3",
      "bass": "tumbao_major"
    }
  }
}
