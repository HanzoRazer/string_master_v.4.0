{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://zone-tritone.dev/schemas/ztplay.schema.json",
  "title": "Zone-Tritone Playlist (.ztplay)",
  "description": "Schema for Zone-Tritone playlist files that sequence multiple programs for extended practice sessions. Two variants: simple (name + programs) and session (id + title + items).",
  "type": "object",
  "oneOf": [
    {
      "$ref": "#/definitions/simplePlaylist"
    },
    {
      "$ref": "#/definitions/sessionPlaylist"
    }
  ],
  "definitions": {
    "simplePlaylist": {
      "type": "object",
      "description": "Simple playlist with program sequence. Uses 'name' + 'programs'.",
      "required": ["name", "programs"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Human-readable playlist name."
        },
        "tempo": {
          "type": "number",
          "description": "Override tempo for all programs in BPM.",
          "minimum": 20,
          "maximum": 400
        },
        "outfile": {
          "type": "string",
          "description": "Output MIDI filename for combined playlist.",
          "pattern": "^.+\\.mid$"
        },
        "programs": {
          "type": "array",
          "description": "Ordered list of program references.",
          "items": {
            "$ref": "#/definitions/programRef"
          },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },
    "sessionPlaylist": {
      "type": "object",
      "description": "Session playlist with named items, tags, and defaults. Uses 'id' + 'title' + 'items'.",
      "required": ["id", "title", "items"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for this playlist."
        },
        "title": {
          "type": "string",
          "description": "Display title for this playlist."
        },
        "level": {
          "type": "string",
          "description": "Difficulty level identifier."
        },
        "category": {
          "type": "string",
          "description": "Playlist category (e.g., 'archetype_session', 'twelve_key_cycle')."
        },
        "tags": {
          "type": "array",
          "description": "Searchable tags for categorization.",
          "items": {
            "type": "string"
          }
        },
        "defaults": {
          "type": "object",
          "description": "Default settings applied to all items.",
          "properties": {
            "tempo": {
              "type": "number",
              "minimum": 20,
              "maximum": 400
            },
            "bars_per_chord": {
              "type": "integer",
              "minimum": 1
            },
            "style": {
              "type": "string"
            }
          },
          "additionalProperties": true
        },
        "items": {
          "type": "array",
          "description": "Named items in this session playlist.",
          "items": {
            "$ref": "#/definitions/playlistItem"
          },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },
    "programRef": {
      "type": "object",
      "description": "Reference to a program with repeat count.",
      "required": ["config"],
      "properties": {
        "config": {
          "type": "string",
          "description": "Relative path to .ztprog or .ztex file."
        },
        "repeat": {
          "type": "integer",
          "description": "Number of times to repeat this program.",
          "minimum": 1,
          "default": 1
        },
        "notes": {
          "type": "string",
          "description": "Practice notes or context for this program in the session."
        }
      },
      "additionalProperties": false
    },
    "playlistItem": {
      "type": "object",
      "description": "Named playlist item for session playlists.",
      "required": ["name", "file"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Display name for this item."
        },
        "file": {
          "type": "string",
          "description": "Relative path to .ztprog file."
        },
        "repeats": {
          "type": "integer",
          "description": "Number of times to repeat this item.",
          "minimum": 1,
          "default": 1
        },
        "notes": {
          "type": "string",
          "description": "Practice notes or context for this item in the session."
        }
      },
      "additionalProperties": false
    }
  }
}
